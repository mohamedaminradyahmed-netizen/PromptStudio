# PromptStudio Python Backend Environment Variables

# Application
APP_NAME=PromptStudio Python Backend
APP_VERSION=2.0.0
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Node.js Backend (for WebSocket bridge)
NODEJS_BACKEND_URL=http://localhost:3001
NODEJS_WS_URL=ws://localhost:3001

# LLM Providers - OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORGANIZATION=

# LLM Providers - Anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key

# LLM Providers - Google (Gemini)
GOOGLE_API_KEY=your-google-api-key
GOOGLE_PROJECT_ID=

# LLM Providers - Azure OpenAI
AZURE_API_KEY=your-azure-api-key
AZURE_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_API_VERSION=2024-02-15-preview
AZURE_DEPLOYMENT=your-deployment-name

# LLM Providers - Cohere (optional)
COHERE_API_KEY=your-cohere-api-key

# Default LLM Settings
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=gpt-4-turbo-preview
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=4096

# Embedding Settings
DEFAULT_EMBEDDING_PROVIDER=openai
DEFAULT_EMBEDDING_MODEL=text-embedding-3-small

# Batch Processing
BATCH_MAX_CONCURRENCY=10
BATCH_RATE_LIMIT_PER_MINUTE=60
BATCH_DEFAULT_TIMEOUT=120

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/promptstudio

# JWT (should match Node.js backend)
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Commands and Templates Directory
COMMANDS_DIRECTORY=./commands
TEMPLATES_DIRECTORY=./templates

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Feature Flags
ENABLE_STREAMING=true
ENABLE_CACHING=true
ENABLE_METRICS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Safety Settings
SAFETY_CHECK_ENABLED=true
SAFETY_BLOCK_THRESHOLD=high
