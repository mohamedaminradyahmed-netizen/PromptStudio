# PromptStudio Python Backend Environment Variables

# Application
APP_NAME=PromptStudio Python Backend
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Node.js Backend (for WebSocket bridge)
NODEJS_BACKEND_URL=http://localhost:3001
NODEJS_WS_URL=ws://localhost:3001

# LLM Providers
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=gpt-4-turbo-preview

# Redis
REDIS_URL=redis://localhost:6379/0

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/promptstudio

# JWT (should match Node.js backend)
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Commands Directory
COMMANDS_DIRECTORY=./commands

# Logging
LOG_LEVEL=INFO
