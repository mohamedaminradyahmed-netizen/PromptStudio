{
  "mcpServers": {
    "promptstudio": {
      "command": "npm",
      "args": ["run", "mcp:stdio"],
      "cwd": "./backend",
      "env": {
        "DATABASE_URL": "postgresql://postgres:postgres@localhost:5432/promptstudio",
        "OPENAI_API_KEY": "${OPENAI_API_KEY}"
      },
      "description": "PromptStudio RAG & Knowledge Base MCP Server",
      "capabilities": {
        "tools": true,
        "resources": true
      }
    }
  }
}
